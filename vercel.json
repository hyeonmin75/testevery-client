{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "client/src/data/**/*.ts",
          "server/seo.ts"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/blog/([^/]+)",
      "dest": "/api/blog?postId=$1"
    },
    {
      "src": "/test/([^/]+)",
      "dest": "/api/test?testId=$1"
    },
    {
      "src": "/result/([^/]+)",
      "dest": "/api/result?testId=$1"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap"
    },
    {
      "src": "/robots.txt",
      "dest": "/api/robots"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}